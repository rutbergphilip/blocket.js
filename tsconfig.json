{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "lib",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "include": ["lib"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
